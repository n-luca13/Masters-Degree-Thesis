<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/arrow_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="Home"
        android:scaleType="fitXY"
        android:src="@drawable/ic_arrow_left"
        app:tint="@color/gray_active"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@id/settings_btn"
        android:layout_toEndOf="@id/arrow_left_btn"
        android:background="@null"
        android:hint="@string/titolo"
        android:inputType="text"
        android:textColor="@color/gray_active"
        android:textStyle="bold"
        android:privateImeOptions="disableToolbar=true"
        tools:ignore="Autofill,TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <ImageView
        android:id="@+id/settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:contentDescription="@string/app_settings"
        android:src="@drawable/ic_settings"
        app:tint="@color/gray_active"
        tools:ignore="TouchTargetSizeCheck" />

</RelativeLayout>
